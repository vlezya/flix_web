<h1>New Review <%= link_to @movie.title, @movie %></h1>

<%= form_with(model: [@movie, @review]) do |f| %>
  <%= render 'shared/errors', object: @review %>
  
  <%= f.label :comment %>
  <%= f.text_area :comment, autofocus: true %>
  
  <%= f.label :stars %>
  <%= f.select :stars, Review::STARS, prompt: 'Pick one' %>
  
  <%= f.submit %>
<% end %>