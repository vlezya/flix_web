<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  
  <div class="actions">
    <% if current_user?(@user) %>
      <%= link_to 'Edit Account', edit_user_path(@user), class: 'button edit' %>
      <%= link_to 'Delete Account', @user,
                  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'},
                  class: 'button delete' %>
    <% end %>
  </div>
</section>